!! URxvt
URxvt.font: xft:DejaVu Sans Mono:style=Book:size=12,xft:PowerLine:style=Medium:size=12
URxvt.boldFont: xft:DejaVu Sans Mono:style=Bold:size=12
URxvt.italicFont: xft:DejaVu Sans Mono:style=Oblique:size=12
URxvt.boldItalicfont: xft:DejaVu Sans Mono:style=Bold Oblique:size=12
URxvt.scrollBar: false
URxvt.scrollBar_right: false

!! xterm
{{- if eq .chezmoi.hostname "pcgael4"}}
xterm*font: -misc-fixed-medium-r-normal--20-200-75-75-c-100-iso8859-1
{{- else}}
xterm*font: -misc-fixed-medium-r-normal--20-200-75-75-c-100-iso8859-1
{{- end}}
xterm*loginShell: true
xterm*scrollBar: true
xterm*rightScrollBar: true
xterm*title: XTerm
xterm*iconName: XTerm
xterm*saveLines: 50000
xterm*jumpScroll: true
xterm*scrollTtyOutput: false
xterm*scrollKey: true
xterm*alwaysUseMods: true
xterm*metaSendsEscape: true
xterm*utf8Title: true
