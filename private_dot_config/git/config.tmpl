# External dependencies:
# delta (https://github.com/dandavison/delta, sudo apt install git-delta)
# difft (https://github.com/Wilfred/difftastic, cargo install difftastic)
# git-lfs (https://git-lfs.com/, sudo apt install git-lfs)

[user]
    email = {{.git.user.email}}
    name = {{.git.user.name | quote }}

[init]
    defaultBranch = main

[core]
    compression = 0

[credential]
    helper = manager{{/* From the gcm package, manually installed, https://github.com/git-ecosystem/git-credential-manager */}}
    credentialStore = secretservice

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
    difftool = true

[diff]
    tool = difftastic
    colorMoved = default

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations
    line-numbers = true

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

[http]
    postBuffer = 52428800

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[alias]
    ; difftastic aliases
    dlog = -c diff.external=difft log -p --ext-diff
    dshow = -c diff.external=difft show --ext-diff
    ddiff = -c diff.external=difft diff
