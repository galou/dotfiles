psaux()
{
    if [[ -z "$1" ]]; then
        ps aux
    elif [[ "$1"  = grep ]]; then
        ps aux | grep grep
    else
        ps aux | grep -v grep | grep "$1"
    fi
}

psux()
{
    if [[ -z "$1" ]]; then
        ps ux
    elif [[ "$1" = grep ]]; then
        ps ux | grep grep
    else
        ps ux | grep -v grep | grep "$1"
    fi
}

